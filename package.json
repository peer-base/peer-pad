{
  "name": "peerpad",
  "version": "0.3.1",
  "private": true,
  "leadMaintainer": "Jim Pick <jim@jimpick.com>",
  "scripts": {
    "start": "node scripts/start.js",
    "build": "GENERATE_SOURCEMAP=true GIT_COMMIT=$(git rev-parse HEAD) PUBLIC_URL='./' node scripts/build.js",
    "lint": "standard",
    "test": "jest --no-cache --env=jsdom",
    "test:e2e": "jest --testMatch **/test/e2e/**/*.js",
    "test:e2e:ci": "NO_SANDBOX=true URL=http://localhost:1337 run-p --race test:serve test:e2e",
    "test:e2e:load": "node test/e2e-load",
    "test:serve": "http-server -s -p 1337 build",
    "serve:build": "http-server -p 1337 build",
    "deploy:ipfs": "ipfs add -r build/",
    "start:rendezvous": "rendezvous",
    "start:test:pinner": "PEER_STAR_SWARM_ADDRESS=/dns4/127.0.0.1/tcp/9090/ws/p2p-websocket-star PEER_STAR_APP_NAME=peer-pad/2 pinner"
  },
  "bin": {
    "peerpad-print-dump": "bin/peerpad-print-dump"
  },
  "dependencies": {
    "autoprefixer": "7.1.2",
    "babel-core": "6.25.0",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.1",
    "babel-preset-react-app": "^3.0.2",
    "babel-runtime": "6.26.0",
    "bs58": "^4.0.1",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "1.1.3",
    "classnames": "^2.2.5",
    "codemirror": "^5.30.0",
    "color-hash": "^1.0.3",
    "concat-stream": "^1.6.2",
    "css-loader": "0.28.4",
    "delta-crdts-msgpack-codec": "^0.2.0",
    "dotenv": "4.0.0",
    "eslint": "4.4.1",
    "eslint-config-react-app": "^2.0.0",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "2.35.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.1.0",
    "extract-text-webpack-plugin": "3.0.0",
    "fast-diff": "^1.1.2",
    "file-loader": "0.11.2",
    "fs-extra": "3.0.1",
    "history": "^4.7.2",
    "html-webpack-plugin": "2.29.0",
    "jest": "20.0.4",
    "katex": "^0.10.0-beta",
    "libp2p-crypto": "^0.13.0",
    "lodash.debounce": "^4.0.8",
    "milliseconds": "^1.0.3",
    "object-assign": "4.1.1",
    "peer-base": "^0.12.0-rc4",
    "pify": "^3.0.0",
    "postcss-css-variables": "^0.8.0",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-import": "^11.0.0",
    "postcss-loader": "2.0.6",
    "promise": "8.0.1",
    "prop-types": "^15.6.0",
    "quill": "^1.3.2",
    "quill-delta-to-html": "^0.5.1",
    "react": "^15.6.2",
    "react-dev-utils": "^4.0.1",
    "react-dom": "^15.6.2",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-hash-link": "^1.1.1",
    "remark": "^9.0.0",
    "remark-html": "^7.0.0",
    "remark-html-katex": "^1.1.1",
    "remark-math": "^1.0.4",
    "style-loader": "0.18.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "sw-precache-webpack-plugin": "0.11.4",
    "tachyons": "^4.8.1",
    "tachyons-flexbox": "^2.0.5",
    "tachyons-forms": "^3.1.3",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-loader": "0.5.9",
    "webpack": "3.5.1",
    "webpack-dev-server": "2.7.1",
    "webpack-manifest-plugin": "1.2.1",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "delay": "^4.1.0",
    "enzyme": "^3.0.0",
    "enzyme-adapter-react-15": "^1.0.1",
    "enzyme-to-json": "^3.3.4",
    "http-server": "^0.11.1",
    "identity-obj-proxy": "^3.0.0",
    "libp2p-websocket-star-rendezvous": "^0.2.4",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^1.9.0",
    "puppeteer-cluster": "^0.11.2",
    "react-test-renderer": "^15.6.2",
    "rollbar": "^2.5.0",
    "rollbar-sourcemap-webpack-plugin": "^2.4.0",
    "standard": "^11.0.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js",
      "<rootDir>/config/enzyme.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+(?!\\.module\\.)\\.(css|styl)$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|styl)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "test/e2e-load/",
      "scripts/",
      "config/"
    ]
  },
  "homepage": "./"
}
